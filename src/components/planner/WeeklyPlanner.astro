---
import PlannerManager from "./PlannerManager.tsx";
import { getAllMeals } from "../../services/dataAdapter.ts";

// Obtener datos desde Supabase o local como fallback
const allMeals = await getAllMeals();
---

<div class="text-center mb-8 max-w-3xl mx-auto">
  <h2 class="text-3xl font-bold text-[#3a5a40]">
    Planificador Semanal Interactivo
  </h2>
  <p class="mt-2 text-stone-600">
    Diseña tu semana, ajusta los comensales y revisa el análisis nutricional
    diario.
  </p>
</div>

<PlannerManager client:load allMeals={allMeals} />
