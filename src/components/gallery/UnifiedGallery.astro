---
// src/components/gallery/UnifiedGallery.astro
import { getAllMeals, getAllSupplements } from "../../services/dataAdapter.ts";
import { getSnacksFromRecipes } from "../../utils/recipeUtils.ts";

import SupplementBrowser from "../supplements/SupplementBrowser.tsx";

// Obtener datos desde Supabase o local como fallback
const allMeals = await getAllMeals();
const allSupplements = await getAllSupplements();
const allSnacks = getSnacksFromRecipes(allMeals);
---

<section id="galeria" class="content-section hidden">
  <div class="text-center mb-8 max-w-3xl mx-auto">
    <h2 class="text-3xl font-bold text-[#6B8A7A]">Galer√≠a de Suplementos</h2>
    <p class="mt-2 text-stone-600">
      Explora todos los suplementos disponibles. Encuentra las opciones
      perfectas para complementar tu dieta.
    </p>
  </div>

  <SupplementBrowser client:load allSupplements={allSupplements} />
</section>
