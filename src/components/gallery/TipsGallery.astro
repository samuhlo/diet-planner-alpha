---
// src/components/Tips.astro
import { allTips } from "../../data/tips.ts";
import TipsBrowser from "../tips/TipsBrowser.jsx";
---

<section id="consejos" class="content-section hidden">
  <div class="text-center mb-8 max-w-3xl mx-auto">
    <h2 class="text-3xl font-bold text-[#3a5a40]">Estrategias y Consejos</h2>
    <p class="mt-2 text-stone-600">
      Explora la base de conocimiento. Usa el buscador o los filtros para
      encontrar estrategias clave para tu día a día.
    </p>
  </div>

  <TipsBrowser client:visible allTips={allTips} />
</section>
